{
	"manifest_version": 3,
	"name": "Pixie.Browser",
	"version": "1.0.0",
	"description": "A browser extension for page change detection and alerts",
	"permissions": [
		"activeTab",
		"storage",
		"notifications",
		"alarms",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Pixie.Browser"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}